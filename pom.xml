    <groupId>software.amazon.msk</groupId>
    <artifactId>kafka-eventbridge-sink</artifactId>
    <version>${revision}</version>
    <packaging>jar</packaging>
    <name>kafka-eventbridge-sink</name>
    <url>https://github.com/awslabs/eventbridge-kafka-connector</url>
    <description>Kafka Connect sink to consume and send Kafka records to an EventBridge event bus.</description>

    <properties>
