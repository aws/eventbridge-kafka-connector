        <url>https://github.com/awslabs/eventbridge-kafka-connector/issues</url>
        <system>github</system>
    </issueManagement>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://aws.amazon.com/apache2.0</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <url>http://github.com/awslabs/eventbridge-kafka-connector/tree/main</url>
        <connection>scm:git:git://github.com/awslabs/eventbridge-kafka-connector.git</connection>
        <developerConnection>scm:git:ssh://github.com/awslabs/eventbridge-kafka-connector.git</developerConnection>
    </scm>
</project>
